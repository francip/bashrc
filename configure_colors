#!/bin/bash

# Library of ANSI terminal color definitions
# for use with echo -e

# Source it in any function you want to have color output

local COLOR_RED COLOR_GREEN COLOR_YELLOW COLOR_BLUE COLOR_MAGENTA COLOR_CYAN COLOR_WHITE COLOR_NONE
local COLOR_RED_BOLD COLOR_GREEN_BOLD COLOR_YELLOW_BOLD COLOR_BLUE_BOLD COLOR_MAGENTA_BOLD COLOR_CYAN_BOLD COLOR_WHITE_BOLD COLOR_BOLD
local COLOR_RED_UNDERLINE COLOR_GREEN_UNDERLINE COLOR_YELLOW_UNDERLINE COLOR_BLUE_UNDERLINE COLOR_MAGENTA_UNDERLINE COLOR_CYAN_UNDERLINE COLOR_WHITE_UNDERLINE COLOR_UNDERLINE
local COLOR_RED_INVERT COLOR_GREEN_INVERT COLOR_YELLOW_INVERT COLOR_BLUE_INVERT COLOR_MAGENTA_INVERT COLOR_CYAN_INVERT COLOR_WHITE_INVERT COLOR_INVERT

COLOR_RED='\033[0;31m'
COLOR_GREEN='\033[0;32m'
COLOR_YELLOW='\033[0;33m'
COLOR_BLUE='\033[0;34m'
COLOR_MAGENTA='\033[0;35m'
COLOR_CYAN='\033[0;36m'
COLOR_WHITE='\033[0;37m'
COLOR_NONE='\033[0m'

COLOR_RED_BOLD='\033[1;31m'
COLOR_GREEN_BOLD='\033[1;32m'
COLOR_YELLOW_BOLD='\033[1;33m'
COLOR_BLUE_BOLD='\033[1;34m'
COLOR_MAGENTA_BOLD='\033[1;35m'
COLOR_CYAN_BOLD='\033[1;36m'
COLOR_WHITE_BOLD='\033[1;37m'
COLOR_BOLD='\033[1m'

COLOR_RED_UNDERLINE='\033[4;31m'
COLOR_GREEN_UNDERLINE='\033[4;32m'
COLOR_YELLOW_UNDERLINE='\033[4;33m'
COLOR_BLUE_UNDERLINE='\033[4;34m'
COLOR_MAGENTA_UNDERLINE='\033[4;35m'
COLOR_CYAN_UNDERLINE='\033[4;36m'
COLOR_WHITE_UNDERLINE='\033[4;37m'
COLOR_UNDERLINE='\033[4m'

COLOR_RED_INVERT='\033[7;31m'
COLOR_GREEN_INVERT='\033[7;32m'
COLOR_YELLOW_INVERT='\033[7;33m'
COLOR_BLUE_INVERT='\033[7;34m'
COLOR_MAGENTA_INVERT='\033[7;35m'
COLOR_CYAN_INVERT='\033[7;36m'
COLOR_WHITE_INVERT='\033[7;37m'
COLOR_INVERT='\033[7m'
